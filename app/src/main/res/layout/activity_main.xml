<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/khungdangnhap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        android:layout_marginTop="20dp"

        >


        <EditText
            android:id="@+id/edtten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ems="19"
            android:hint="Nhập họ và tên"
            android:inputType="text"
            android:padding="12dp"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/edtmssv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ems="19"
            android:hint="Nhập MSSV"
            android:inputType="text"
            android:padding="12dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="6dp"
            tools:layout_editor_absoluteY="132dp" />

        <EditText
            android:id="@+id/edttuoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ems="19"
            android:hint="Nhập tuổi"
            android:inputType="text"
            android:padding="12dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="6dp"

            tools:layout_editor_absoluteY="206dp" />

        <RadioGroup
            android:id="@+id/idgroud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="9dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/edtgioitinh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giới tính:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nam"
                android:textSize="20sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nữ"
                android:textSize="20sp" />
        </RadioGroup>

        <TextView
            android:id="@+id/edtsothich"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="16dp"
            android:textColor="#000000"
            android:text="Sở Thích:"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/chkdabong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Đá bóng"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/chkchoigame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="chơi game"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnluu"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Lưu"
                />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>